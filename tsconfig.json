{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}